@using NewMyApp.Core.Models
@model Group

<div class="container mt-5">
    <div class="card shadow-lg border-0 animate__animated animate__fadeIn">
        <div class="card-img-top position-relative" style="height: 300px; background-color: #f8f9fa;">
            @if (!string.IsNullOrEmpty(Model.CoverImage))
            {
                <img src="@Model.CoverImage" class="w-100 h-100" style="object-fit: cover;" alt="@Model.Name">
            }
            else
            {
                <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                    <i class="bi bi-people-fill" style="font-size: 5rem;"></i>
                </div>
            }
            <div class="position-absolute bottom-0 start-0 w-100 p-4" style="background: linear-gradient(transparent, rgba(0,0,0,0.7));">
                <h1 class="text-white mb-0">@Model.Name</h1>
                <p class="text-white-50 mb-0">@Model.UserGroups.Count учасників</p>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <p class="text-muted mb-0">
                    Створено: @Model.CreatedAt.ToString("dd.MM.yyyy") 
                    користувачем @Model.Creator.UserName
                </p>
                @if (!ViewBag.IsMember)
                {
                    <button class="btn btn-primary join-group" data-group-id="@Model.Id">
                        Приєднатися до групи
                    </button>
                }
                else if (!ViewBag.IsAdmin)
                {
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#leaveGroupModal">
                        Покинути групу
                    </button>
                }
                @if (ViewBag.IsAdmin)
                {
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Ви впевнені, що хочете видалити цю групу?')">
                            <i class="bi bi-trash"></i> Видалити групу
                        </button>
                    </form>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-4">
                    <h5>Опис групи</h5>
                    <p>@Model.Description</p>
                </div>
            }

            <div class="mb-4">
                <h5>Учасники (@Model.UserGroups.Count)</h5>
                <div class="row g-3">
                    @foreach (var userGroup in Model.UserGroups)
                    {
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <a asp-controller="Profile" asp-action="Index" asp-route-id="@userGroup.UserId" class="text-decoration-none">
                                    <img src="@(string.IsNullOrEmpty(userGroup.User.ProfilePicture) ? "/images/default-avatar.png" : userGroup.User.ProfilePicture)" 
                                         class="rounded-circle me-2" 
                                         style="width: 40px; height: 40px; object-fit: cover;" 
                                         alt="@userGroup.User.UserName">
                                </a>
                                <div>
                                    <p class="mb-0">@userGroup.User.UserName</p>
                                    <small class="text-muted">@(userGroup.Role == GroupRole.Admin ? "Адміністратор" : "Учасник")</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Posts.Any())
            {
                <div>
                    <h5>Дописи групи (@Model.Posts.Count)</h5>
                    @foreach (var post in Model.Posts.OrderByDescending(p => p.CreatedAt))
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <a asp-controller="Profile" asp-action="Index" asp-route-id="@post.UserId" class="text-decoration-none">
                                        <img src="@(string.IsNullOrEmpty(post.User.ProfilePicture) ? "/images/default-avatar.png" : post.User.ProfilePicture)" 
                                             class="rounded-circle me-2" 
                                             style="width: 32px; height: 32px; object-fit: cover;" 
                                             alt="@post.User.UserName">
                                    </a>
                                    <div>
                                        <p class="mb-0">@post.User.UserName</p>
                                        <small class="text-muted">@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                </div>
                                <p>@post.Content</p>
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <img src="@post.ImageUrl" class="img-fluid rounded mb-3" alt="Post image">
                                }
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="btn btn-link text-dark p-0 me-3 like-button" data-post-id="@post.Id">
                                        <i class="@(post.Likes.Any(l => l.UserId == ViewBag.CurrentUserId) ? "bi bi-heart-fill text-danger" : "bi bi-heart")"></i>
                                        <span class="likes-count">@post.Likes.Count</span>
                                    </button>
                                    <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.Id" class="btn btn-link text-primary">
                                        <i class="far fa-comment"></i>
                                        <span>@post.Comments.Count</span>
                                    </a>
                                </div>
                                <div id="comments-section" class="mt-4">
                                    <h5>Коментарі (@post.Comments.Count)</h5>
                                    @if (post.Comments != null && post.Comments.Any())
                                    {
                                        var displayedComments = post.Comments.Take(3);
                                        foreach (var comment in displayedComments)
                                        {
                                            <div class="mb-3 p-3 bg-light rounded">
                                                <div class="d-flex">
                                                    <img src="@(string.IsNullOrEmpty(comment.User?.ProfilePicture) ? "/images/default-avatar.png" : comment.User.ProfilePicture)" 
                                                         class="rounded-circle me-2" 
                                                         alt="Profile Picture"
                                                         style="width: 32px; height: 32px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-0">@comment.User?.FirstName @comment.User?.LastName</h6>
                                                        <small class="text-muted">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                        <p class="mt-1">@comment.Content</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (post.Comments.Count > 3)
                                        {
                                            <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.Id" class="btn btn-link">Подивитись більше</a>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted">Поки що немає коментарів.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (ViewBag.IsMember)
            {
                <div class="text-center py-5">
                    <h5>У цій групі ще немає дописів</h5>
                    <p class="text-muted">Будьте першим, хто створить допис у цій групі</p>
                    <a asp-controller="Posts" asp-action="Create" asp-route-groupId="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-2"></i>Створити допис
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="leaveGroupModal" tabindex="-1" aria-labelledby="leaveGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="leaveGroupModalLabel">Підтвердження виходу</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Ви впевнені, що хочете покинути цю групу?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                <form asp-action="Leave" method="post" style="display: inline;">
                    <input type="hidden" name="groupId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Покинути</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .modal {
        z-index: 1050 !important;
    }
    .modal-backdrop {
        display: none !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.join-group').click(function() {
                var groupId = $(this).data('group-id');
                var button = $(this);
                
                $.post('/Groups/Join', { groupId: groupId })
                    .done(function() {
                        location.reload();
                    })
                    .fail(function(xhr) {
                        alert('Помилка при приєднанні до групи: ' + xhr.responseText);
                    });
            });

            $('.like-button').click(function(e) {
                e.preventDefault();
                var postId = $(this).data('post-id');
                var button = $(this);

                $.ajax({
                    url: '/Posts/Like/' + postId,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        var icon = button.find('i');
                        var count = button.find('.likes-count');

                        if (response.isLiked) {
                            icon.removeClass('bi-heart').addClass('bi-heart-fill text-danger');
                        } else {
                            icon.removeClass('bi-heart-fill text-danger').addClass('bi-heart');
                        }

                        count.text(response.likesCount);
                    },
                    error: function(xhr) {
                        alert('Помилка при оцінці допису: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>
}