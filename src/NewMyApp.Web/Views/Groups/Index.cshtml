@model IEnumerable<NewMyApp.Core.Models.Group>

<div class="row mb-4">
    <div class="col-md-8">
        <h2>Групи</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Створити групу
        </a>
    </div>
</div>

<div class="row">
    @foreach (var group in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-img-top position-relative" style="height: 200px; background-color: #f8f9fa;">
                    @if (!string.IsNullOrEmpty(group.CoverImage))
                    {
                        <img src="@group.CoverImage" class="w-100 h-100" style="object-fit: cover;" alt="@group.Name">
                    }
                    else
                    {
                        <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                            <i class="bi bi-people-fill" style="font-size: 3rem;"></i>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <h5 class="card-title">@group.Name</h5>
                    <p class="card-text text-muted">
                        @(group.Description?.Length > 100 
                            ? $"{group.Description[..97]}..." 
                            : group.Description)
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-people"></i> @group.UserGroups?.Count учасників
                        </small>
                        <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-outline-primary btn-sm">
                            Переглянути
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-people display-1 text-muted"></i>
        <h3 class="mt-3">Немає доступних груп</h3>
        <p class="text-muted">Створіть першу групу, щоб почати спілкування</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Створити групу
        </a>
    </div>
}

@section Scripts {
    <script>
        // Enable tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
} 