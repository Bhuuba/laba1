@model IEnumerable<NewMyApp.Core.Models.Group>

<div class="container mt-5">
    <h2 class="text-primary mb-4">Групи</h2>

    <div class="row">
        @foreach (var group in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100 animate__animated animate__fadeInUp">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@group.Name</h5>
                        <p class="card-text text-muted">@group.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Учасників: @group.Members.Count</small>
                        </p>

                        @if (!group.Members.Any(m => m.UserId == ViewBag.CurrentUserId))
                        {
                            <button class="btn btn-primary join-group" data-group-id="@group.Id">
                                Приєднатися
                            </button>
                        }
                        else
                        {
                            <form asp-action="Leave" method="post" style="display: inline;">
                                <input type="hidden" name="groupId" value="@group.Id" />
                                <button type="submit" class="btn btn-danger">
                                    Покинути групу
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.join-group').click(function() {
                var button = $(this);
                var groupId = button.data('group-id');

                $.post('/Groups/Join', { groupId: groupId })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    })
                    .fail(function() {
                        alert('Помилка при спробі приєднатися до групи');
                    });
            });
        });
    </script>
}