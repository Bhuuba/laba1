<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewMyApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tippy.js@6/dist/tippy.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewMyApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-globe2 me-2"></i>NewMyApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Posts" asp-action="Index">Стрічка</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Posts" asp-action="MyPosts">Мої пости</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Friends" asp-action="Index">
                                <i class="fas fa-users"></i> Друзі
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Groups" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Групи
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="Create">
                                <i class="bi bi-plus-circle me-1"></i>Створити пост
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <form class="d-flex me-3" asp-controller="Search" asp-action="Index" method="get">
                            <input class="form-control me-2" type="search" name="q" placeholder="Пошук..." aria-label="Search">
                            <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mt-5 pt-4">
        <div class="row">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="col-md-3 d-none d-md-block">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <img src="@(string.IsNullOrEmpty(User.FindFirst("ProfilePicture")?.Value) ? "/images/default-avatar.png" : User.FindFirst("ProfilePicture")?.Value)"
                                     class="rounded-circle mb-2" alt="Profile Picture" style="width: 100px; height: 100px; object-fit: cover;">
                                <h5 class="mb-0">@User.Identity.Name</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                <a asp-controller="Profile" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="bi bi-person me-2"></i>Мій профіль
                                </a>
                                <a asp-controller="Groups" asp-action="MyGroups" class="list-group-item list-group-item-action">
                                    <i class="bi bi-people-fill me-2"></i>Мої групи
                                </a>
                                <a asp-controller="Posts" asp-action="MyPosts" class="list-group-item list-group-item-action">
                                    <i class="bi bi-file-text me-2"></i>Мої пости
                                </a>
                                <a asp-controller="Friends" asp-action="Index" class="list-group-item list-group-item-action">
                                    <i class="bi bi-person-plus me-2"></i>Друзі
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <div class="col-md-3 d-none d-md-block">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Популярні групи</h5>
                            <div class="list-group list-group-flush" id="popularGroups">
                                <!-- Populated by JavaScript -->
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Рекомендовані друзі</h5>
                            <div class="list-group list-group-flush" id="recommendedFriends">
                                <!-- Populated by JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
        </div>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2024 - NewMyApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="text-muted me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-muted me-3"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-muted"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tippy.js@6/dist/tippy-bundle.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
