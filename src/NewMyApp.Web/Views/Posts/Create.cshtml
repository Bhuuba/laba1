@model NewMyApp.Web.Models.CreatePostViewModel

@{
    ViewData["Title"] = "Створити новий пост";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label">Текст поста</label>
                    <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile" class="control-label">Зображення</label>
                    <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GroupId" class="control-label">Група (необов'язково)</label>
                    <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups">
                        <option value="">-- Виберіть групу --</option>
                    </select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Назад</a>
                    <button type="submit" class="btn btn-primary">Створити</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('form').on('submit', function() {
                if (!$('#Content').val().trim()) {
                    alert('Будь ласка, введіть текст поста');
                    return false;
                }
                return true;
            });
        });
    </script>
} 