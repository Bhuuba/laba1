@model NewMyApp.Core.Models.Post

@{
    ViewData["Title"] = "Редагувати пост";
}

<div class="container mt-4">
    <h2>Редагувати пост</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label for="Content" class="control-label">Зміст</label>
                    <textarea name="Content" id="Content" class="form-control" rows="5">@Model.Content</textarea>
                    <span class="text-danger field-validation-valid" data-valmsg-for="Content"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Зображення</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2">
                            <img src="@Model.ImageUrl" alt="Current image" style="max-width: 200px;" class="img-thumbnail" />
                            <p class="text-muted">Поточне зображення</p>
                        </div>
                    }
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Зберегти</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 